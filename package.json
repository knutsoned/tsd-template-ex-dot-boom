{
	"name": "tsd-boom-template",
	"version": "1.0.4",
	"description": "Defold game template with TypeScriptToLua and Boom",
	"repository": "github:thinknathan/tsd-template-boom",
	"keywords": [
		"typescript",
		"lua",
		"defold"
	],
	"author": "Nathan Bolton (https://thinknathan.ca)",
	"license": "MIT",
	"engines": {
		"node": ">=14.17.0"
	},
	"scripts": {
		"build": "npm run clean && tstl -p tsconfig.production.json",
		"clean": "rimraf ./app/**/*.map -g",
		"dev": "tstl --watch",
		"lint": "eslint src",
		"prettier": "prettier ./** --write",
		"resolve": "library resolve"
	},
	"devDependencies": {
		"@ts-defold/library": "~0.1.2",
		"@ts-defold/tstl-export-as-global": "~1.0.0",
		"@ts-defold/tstl-userdata-sugar": "~1.0.0",
		"@ts-defold/types": "git+https://git@github.com/thinknathan/ts-defold-types.git#^1.3.0",
		"@types/tsd-boom": "git+https://git@github.com/thinknathan/tsd-boom-types.git#^1.0.0",
		"@typescript-eslint/eslint-plugin": "~5.61.0",
		"@typescript-eslint/parser": "~5.61.0",
		"eslint": "~8.44.0",
		"eslint-config-prettier": "~8.8.0",
		"eslint-plugin-prettier": "~4.2.1",
		"prettier": "~2.8.8",
		"rimraf": "^5.0.1",
		"tstl-trim-extensions": "~1.0.3",
		"typescript": "~5.1.3",
		"typescript-to-lua": "~1.16.0",
		"typescript-tstl-plugin": "~0.3.2"
	},
	"resolutions": {
		"typescript-to-lua": "~1.16.0"
	},
	"overrides": {
		"typescript": "~5.1.3"
	}
}
