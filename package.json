{
	"name": "tsd-boom-template",
	"version": "1.0.6",
	"description": "Defold game template with TypeScriptToLua and Boom",
	"repository": "github:thinknathan/tsd-template-boom",
	"keywords": [
		"typescript",
		"lua",
		"defold"
	],
	"author": "Nathan Bolton (https://thinknathan.ca)",
	"license": "MIT",
	"engines": {
		"node": "^16.0.0 || >=18.0.0"
	},
	"type": "module",
	"scripts": {
		"build": "npm run cleanmap && tstl -p tsconfig.production.json",
		"cleanmap": "rimraf ./app/**/*.map -g",
		"dev": "tstl --watch",
		"lint": "eslint src",
		"prettier": "prettier \"./**/*.{eslintrc,yml,json,ts,md,d.ts}\" --write",
		"minify": "node ./minify-lua.cjs",
		"resolve": "library resolve"
	},
	"devDependencies": {
		"@total-typescript/ts-reset": "^0.5.1",
		"@ts-defold/library": "~0.1.2",
		"@ts-defold/tstl-export-as-global": "~1.0.0",
		"@ts-defold/tstl-userdata-sugar": "~1.0.0",
		"@ts-defold/types": "^1.2.21",
		"@types/tsd-boom": "git+https://git@github.com/thinknathan/tsd-boom-types.git#^1.0.0",
		"@typescript-eslint/eslint-plugin": "~6.8.0",
		"@typescript-eslint/parser": "~6.8.0",
		"eslint": "~8.51.0",
		"eslint-config-prettier": "~9.0.0",
		"eslint-plugin-prettier": "~5.0.0",
		"luamin": "^1.0.4",
		"prettier": "~3.0.0",
		"rimraf": "^5.0.1",
		"tstl-trim-extensions": "~1.0.3",
		"typescript": "~5.2.2",
		"typescript-to-lua": "~1.21.0",
		"typescript-tstl-plugin": "~0.3.2"
	},
	"resolutions": {
		"typescript-to-lua": "~1.21.0"
	}
}
